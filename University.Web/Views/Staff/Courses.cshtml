@model IEnumerable<CourseViewModel>
@{
    ViewData["Title"] = "Teached Courses";
    Layout = "_Staff";
}

<div class="container mt-4">
    <h1 class="text-primary mb-4">Teached Courses</h1>

    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Course ID</th>
                    <th>Course Name</th>
                    <th>Faculty Name</th>
                    <th>Department Name</th>
                    <th>Level</th>
                    <th>Semester</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var course in Model)
                {
                    <tr>
                        <td>@course.CourseId</td>
                        <td>@course.CourseName</td>
                        <td>@course.FacultyName</td>
                        <td>@course.DepartmentName</td>
                        <td>@course.Level</td>
                        <td>@course.Semester</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-muted">No courses available to display.</p>
    }
</div>

<style>
    .container {
        font-family: Arial, sans-serif;
    }

    h1 {
        font-weight: bold;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

    .table-bordered th, .table-bordered td {
        border: 1px solid #ddd;
        padding: 10px;
        text-align: left;
    }

    .table-dark {
        background-color: #343a40;
        color: white;
    }

    .table-dark th {
        font-weight: bold;
    }

    .text-muted {
        font-style: italic;
        font-size: 1.1rem;
    }
</style>
