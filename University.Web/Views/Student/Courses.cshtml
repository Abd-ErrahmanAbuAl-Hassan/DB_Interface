@model University.Web.Models.StudentDashboardViewModel;
@{
    Layout = "_Student";
}

<div class="container">
    <h1>Student Courses</h1>
    <div class="info">
        <label for="student-name">Name:</label>
        <span id="student-name">@Model.FullName</span>
    </div>
    <div class="info">
        <label for="student-id">Student ID:</label>
        <span id="student-id">@Model.StudentID</span>
    </div>
    <div class="info">
        <label for="program">Program:</label>
        <span id="program">@Model.Major</span>
    </div>
    <table class="courses-table">
        <thead>
            <tr>
                <th>Course ID</th>
                <th>Course Name</th>
                <th>Credits</th>
                <th>Lab Hours</th>
                <th>Grade</th>
                <th>Degree</th>
            </tr>
        </thead>
        <tbody>
            @{
                int i = 0;
                foreach (var course in Model.Enrollments)
                {
                    <tr>
                        <td>@course.CourseId</td>
                        <td>@Model.courses[i].CourseName</td>
                        <td>@Model.courses[i].Credits</td>
                        <td>@Model.courses[i].LapHours</td>
                        <td>@course.Grade</td>
                        <td>@course.Degree</td>
                    </tr>
                    i++;
                }
            }
        </tbody>
    </table>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f8f9fa;
        color: #333;
    }

  

    h1 {
        text-align: center;
        color: #2c3e50;
    }

    .courses-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .courses-table th, .courses-table td {
            padding: 10px;
            text-align: left;
            border: 1px solid #ddd;
        }

        .courses-table th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

        .courses-table tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .courses-table tr:hover {
            background-color: #f1f1f1;
        }
</style>

