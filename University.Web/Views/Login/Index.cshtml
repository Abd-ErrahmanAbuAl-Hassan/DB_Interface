@model LoginModel
@{
    Layout = "_Login";
}
<link href="~/css/login.css" rel="stylesheet" id="bootstrap-css">
<div class="wrapper fadeInDown">
    <div id="formContent">
        
        <div class="fadeIn first">
            <p id="icon" class="university-name">Menofia University</p>
        </div>

        
        <form method="post" asp-action="Login" >

            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="text" id="login" class="fadeIn second" asp-for="Email"  placeholder="Username">
            

            <input type="text" id="password" class="fadeIn third" asp-for="SSN" placeholder="password">
           

            <div style="width:100%" class="optionsLogin">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="UserType" id="usertype_0" value="System User" checked="checked">
                    <label class="form-check-label" for="usertype_0">System User</label>
                </div> 
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="UserType" id="usertype_2" value="Staff" >
                    <label class="form-check-label" for="usertype_2">Staff</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="UserType" id="usertype_1" value="Student">
                    <label class="form-check-label" for="usertype_1">Student</label>
                </div>
            </div>
            <input type="submit" class="fadeIn fourth" value="Log In">
        </form>

        
        <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
        </div>

    </div>
</div>