@model StaffDashboardViewModel

@{
    ViewData["Title"] = "Staff Dashboard";
    Layout = "_SystemUser";
}

<div class="staff-dashboard container mt-4">
    <h1 class="text-primary mb-4">Staff Dashboard</h1>

    <div class="staff-info mb-4 p-3 border rounded shadow-sm">
        <h2 class="text-secondary">Basic Information</h2>
        <p><strong>Name:</strong> @Model.StaffName</p>
        <p><strong>SSN:</strong> @Model.ssn</p>
        <p><strong>Salary:</strong> $@Model.salary</p>
        <p><strong>Position:</strong> @Model.position</p>
    </div>

    <div class="teaching-details p-3 border rounded shadow-sm">
        <h2 class="text-secondary">Employing Details</h2>
        @if (Model.Department != null && Model.Department.Any())
        {
                <table class="table table-striped table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Faculty</th>
                            <th>Department</th>
                            <th>Hire Date</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.Department)
                    {
                                <tr>
                                    <td>@item.FacultyName</td>
                                    <td>@item.departmentName</td>
                                    <td>@item.hireDate.ToShortDateString()</td>
                                </tr>
                    }
                    </tbody>
                </table>
        }
        else
        {
                <p class="text-muted">No department information available.</p>
        }
    </div>
</div>

<style>
    .staff-dashboard {
        font-family: Arial, sans-serif;
    }

    .staff-info, .teaching-details {
        background-color: #f8f9fa;
    }

    .staff-info p, .teaching-details table {
        margin-bottom: 0;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    .table-bordered {
        border: 1px solid #ddd;
    }

    .table-bordered th, .table-bordered td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    .table-dark {
        background-color: #343a40;
        color: #fff;
    }
</style>



