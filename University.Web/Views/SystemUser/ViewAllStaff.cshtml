@model List<StaffDashboardViewModel>

@{
    Layout = "_SystemUser";
}

<h3 class="page-title">All Staff</h3>

@if (Model != null && Model.Any())
{
    <table class="table table-hover table-bordered">
        <thead class="table-header">
            <tr>
                <th>Staff Name</th>
                <th>SSN</th>
                <th>Position</th>
                <th>Salary</th>
                <th>Departments</th>
                <th>Courses</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model)
            {
                <tr>
                    <td>@staff.StaffName</td>
                    <td>@staff.ssn</td>
                    <td>@staff.position</td>
                    <td>@staff.salary</td>
                    <td>
                        <table class="inner-table">
                            <thead>
                                <tr>
                                    <th>Department</th>
                                    <th>Faculty</th>
                                    <th>Address</th>
                                    <th>Hire Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var department in staff.Department)
                                {
                                    <tr>
                                        <td>@department.departmentName</td>
                                        <td>@department.FacultyName</td>
                                        <td>@department.FacultyAddress</td>
                                        <td>@department.hireDate</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                    <td>
                        <table class="inner-table">
                            <thead>
                                <tr>
                                    <th>Course Name</th>
                                    <th>Credits</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var course in staff.Teaching)
                                {
                                    <tr>
                                        <td>@course.CourseName</td>
                                        <td>@course.Credits</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="no-data">No staff found.</p>
}

<style>
    .page-title {
        text-align: center;
        margin-bottom: 20px;
        color: #333;
        font-weight: bold;
    }

    .table-header {
        background-color: #f8f9fa;
        color: #333;
        text-transform: uppercase;
        font-size: 0.9em;
        text-align: center;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    .inner-table {
        width: 100%;
        border-collapse: collapse;
    }

        .inner-table th, .inner-table td {
            border: 1px solid #ddd;
            padding: 5px;
            text-align: left;
        }

    .details {
        margin: 0;
        font-size: 0.9em;
        color: #555;
    }

    .no-data {
        text-align: center;
        color: #666;
        margin-top: 20px;
    }
</style>